<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:stackFromBottom="false">

    <ImageView
        android:id="@+id/imgGvPoster"
        android:layout_width="90dp"
        android:layout_height="130dp"
        android:contentDescription="@string/movie_poster"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/tv_title_year"
        android:layout_width="90dp"
        android:layout_height="60dp"
        android:maxWidth="90dp"
        android:maxHeight="60dp"
        android:text=""
        android:gravity="center"
        android:textAlignment="center"

        app:layout_constraintEnd_toEndOf="@+id/imgGvPoster"
        app:layout_constraintStart_toStartOf="@+id/imgGvPoster"
        app:layout_constraintTop_toBottomOf="@+id/imgGvPoster" />
</androidx.constraintlayout.widget.ConstraintLayout>